# API Tokens
LATAM_TOKEN=your_latam_token_here #clave api key de lat team
TMDB_KEY=your_tmdb_api_key_here #api key de tmdb
ADDON_KEY=your_addon_key_here  #token para seguridad del addon
TORRENT_API_KEY=your_torrent_api_key_here #clave rss de lat team

# Domain
DOMAIN=https://your-domain.com #dominio publico donde se aloja la aplicacion ejemplo puede ser una ip publica o un dominio comprado con o sin puerto

# qBittorrent Configuration
QBIT_HOST=http://localhost:8083 #url de acceso a qbittorrent 
QBIT_USER=admin #usuario de qbittorrent
QBIT_PASS=adminadmin    #contraseña de qbittorrent
QB_KEEP_ALIVE_INTERVAL=1800 #intervalo keep-alive para mantener sesion activa (segundos). Default: 1800s (30 min, mitad del SessionTimeout de 3600s)

# Torrent Settings
TORRENT_MOVIES_PATH=/datos/videosc/movies  #directorio para peliculas en qbittorrent
TORRENT_SERIES_PATH=/datos/videosc/series  #directorio para series en qbittorrent

# Retry Configuration
MAX_RETRIES=5   #numero maximo de reintentos para operaciones fallidas
RETRY_DELAY=2   #tiempo de espera entre reintentos en segundos

# Cache Configuration (in seconds) 
CACHE_DURATION=3600  #duracion del cache en segundos

# Video Streaming Configuration (Integrado)
# NOTA: VOLUMES_PATH se construye automáticamente desde TORRENT_MOVIES_PATH y TORRENT_SERIES_PATH
# Solo necesitas configurarlo si quieres agregar rutas adicionales
# VOLUMES_PATH=/ruta/adicional1,/ruta/adicional2  #(opcional) rutas adicionales de volumenes
FFPROBE_CACHE_FILE=./ffprobe_cache.json  #archivo cache para validaciones de ffprobe

# Server Configuration
PORT=5000  #puerto en el que se ejecuta el servidor
HOST=0.0.0.0  #direccion en la que se ejecuta el servidor
LOG_LEVEL=warn  #niveles: trace, debug, info, warn, error, fatal
NODE_ENV=production  #development o production